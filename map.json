{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 850,
    "height": 450,
    "title": "Global Plane Crashes (1908â€“2023)",
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "data": {
          "url": "https://cdn.jsdelivr.net/npm/vega-datasets@2.11.0/data/world-110m.json",
          "format": {"type": "topojson", "feature": "countries"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
      },
      {
        "data": {
          "url": "https://vika-senthil.github.io/w10hw/WEEK10_Sheet1.csv",
          "format": {"type": "csv"}
        },
        "transform": [
          {
            "timeUnit": "year",
            "field": "Date",
            "as": "Year"
          },
          {
            "filter": "datum.Year == yearSel"
          }
        ],
        "params": [
          {
            "name": "yearSel",
            "value": 2014,
            "bind": {
              "input":"range",
              "min":1908,
              "max":2023,
              "step":1,
              "name":"Year: "
            }
          }
        ],
        "mark": {"type": "circle", "opacity": 0.7},
        "encoding": {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"},
          "size": {"field": "Fatalities", "type": "quantitative", "title": "Fatalities"},
          "color": {"field": "Fatalities", "type": "quantitative", "scale": {"scheme": "reds"}},
          "tooltip": [
            {"field": "Date", "title": "Date"},
            {"field": "Location", "title": "Location"},
            {"field": "Operator", "title": "Operator"},
            {"field": "Fatalities", "title": "Fatalities"}
          ]
        }
      },
      {
        "data": {
          "values": [
            {
              "Longitude": 105.0,
              "Latitude": 5.0,
              "Label": "MH370 (2014)"
            }
          ]
        },
        "mark": {"type": "text", "fontSize": 12, "fontWeight": "bold", "dx": 8, "dy": -8},
        "encoding": {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"},
          "text": {"field": "Label"}
        }
      }
    ]
  }
  