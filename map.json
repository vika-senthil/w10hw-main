{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 850,
    "height": 450,
    "title": "Global Plane Crashes (1908â€“2023)",
    "projection": {"type": "equalEarth"},
    "layer": "data": {
  "url": "https://vika-senthil.github.io/w10hw/WEEK10_Sheet1.csv",
  "format": {
    "type": "csv"
  }
},
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
      },
      {
        "data": { "url": "WEEK 10 - Sheet1.csv" },
        "transform": [
          {"timeUnit": "year", "field": "Date", "as": "Year"},
          {"filter": "datum.Year == yearSel"}
        ],
        "params": [
          {"name": "yearSel", "value": 2014, "bind": {"input":"range","min":1908,"max":2023,"step":1,"name":"Year: "}}
        ],
        "mark": {"type": "circle", "opacity": 0.7},
        "encoding": {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"},
          "size": {"field": "Fatalities", "type": "quantitative", "title": "Fatalities"},
          "color": {"field": "Fatalities", "type": "quantitative"},
          "tooltip": [
            {"field": "Date", "type": "temporal", "title": "Date"},
            {"field": "Location", "type": "nominal", "title": "Location"},
            {"field": "Operator", "type": "nominal", "title": "Operator"},
            {"field": "Fatalities", "type": "quantitative", "title": "Fatalities"}
          ]
        }
      },
      {
        "data": {
          "values": [
            {"Longitude": 105.0, "Latitude": 5.0, "Label": "MH370 (2014)"}
          ]
        },
        "mark": {"type": "text", "fontSize": 12, "fontWeight": "bold", "dx": 8, "dy": -8},
        "encoding": {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"},
          "text": {"field": "Label"}
        }
      }
    ]
  }  
